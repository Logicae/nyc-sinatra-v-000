<h1>Update Figure</h1>

<form action="/figures/<%=@figure.id%>" method="post">

    Figure:
    <input type="text" name="figure_name" id="figure[name]" value="<%=@figure.name%>">

    Title(s):
    <input type="text" name="new_title" id="title[name]">

    <%Title.all.each do |title|%>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title)%> > <%=title.name%>
    <%end%>

    Landmark(s):
    <input type="text" name="new_landmark" id="landmark[name]">

    <%Landmark.all.each do |landmark|%>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark)%>><%=landmark.name%>
    <%end%>

     <input type="submit" value="Update Figure">

</form>
